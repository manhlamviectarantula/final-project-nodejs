    <style>
        .paginationjs {
            margin-top: 2rem;
            display: flex;
            text-align: center;
            align-items: center;
            justify-content: center;
        }

        #paging ul {
            list-style: none;
            display: flex;
        }

        #paging ul li {
            margin: 0 0.5rem;
        }

        #paging .paginationjs-ellipsis {
            width: 50px;
            height: 50px;
            line-height: 50px;
            /* border: .3rem solid black; */
            background-color: #e4e4e4;
            border-radius: .5rem;
            text-align: center;
            font-size: 3.5rem;
        }

        #paging .paginationjs-page,
        /* #paging .paginationjs-ellipsis, */
        #paging .paginationjs-prev,
        #paging .paginationjs-next {
            width: 50px;
            height: 50px;
            line-height: 50px;
            border: .3rem solid black;
            border-radius: .5rem;
            text-align: center;
            font-size: 3rem;
        }

        #paging .active {
            background-color: black;
            color: white;
        }
    </style>
</head>

